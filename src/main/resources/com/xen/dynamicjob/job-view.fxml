<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.xen.dynamicjob.JobController">

    <center>
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label text="Memory"/>
            <ScrollPane fitToWidth="true" prefHeight="300">
                <VBox fx:id="memoryBox" spacing="2" alignment="TOP_CENTER"/>
            </ScrollPane>

            <Label text="Waiting Queue"/>
            <VBox fx:id="queueBox" spacing="2" alignment="TOP_CENTER" prefHeight="150"/>
        </VBox>
    </center>

    <right>
        <VBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <TextField fx:id="processNameField" promptText="Process Name"/>
            <TextField fx:id="sizeField" promptText="Size"/>
            <TextField fx:id="arrivalField" promptText="Arrival Time"/>
            <TextField fx:id="durationField" promptText="Processing Time"/>
            <Button fx:id="addBtn" text="Add Process"/>
            <Button fx:id="freeBtn" text="Free Process"/>
        </VBox>
    </right>
</BorderPane>

